<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TipTime2" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold_dark</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/dark_background</item>

        <item name="colorSurface">@color/body_tonal_darker</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/body_tonal_dark</item>
        <item name="colorOnSecondary">@color/dark_card</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.TipTime2.Chip</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSecondaryContainer">@color/gold_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnBackground">@color/orange_background_dark</item>
    </style>

    <style name="Theme.TipTime2" parent="Base.Theme.TipTime2" />

    <style name="Theme.TipTime2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TipTime2.AppBarOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.TipTime2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>